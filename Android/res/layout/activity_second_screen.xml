<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical"
            android:id="@+id/linear">

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:background="@drawable/bouton_secondscreen1"
                android:text="Mes parcours"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:paddingLeft="0dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:background="@drawable/bouton_secondsreen"
                android:text="Editer un parcours"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:background="@drawable/bouton_secondscreen2"
                android:text="Parcours à proximité"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:background="@drawable/bouton_secondscreen3"
                android:text="Parcours aléatoires"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:background="@drawable/bouton_secondscreen4"
                android:text="Aller "
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:background="@drawable/bouton_secondscreen5"
                android:text="Options"
                android:textColor="@color/black"
                android:textSize="32dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>